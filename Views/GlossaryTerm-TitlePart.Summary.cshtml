@model OrchardCore.Title.ViewModels.TitlePartViewModel
@{
    string abbreviation = Model.ContentItem.Content.GlossaryTerm.Abbreviation.Text;
    string titleRender = Model.Title;
    if(!string.IsNullOrEmpty(abbreviation))
    {
        titleRender = $"{Model.Title} ({abbreviation})";
    }
}
<h1>
    <a display-for="Model.ContentItem">
        @titleRender
    </a>
</h1>
